<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <div id="user-info">
          <%= render 'shared/user_info' %>
        </div>
      </section>
      <section>
        <div id="user-stats">
          <%= render 'shared/stats' %>
        </div>
      </section>
      <section>
        <div id="micropost-form-div">
          <%= render 'shared/micropost_form' %>
        </div>
      </section>
    </aside>
    <div class="span8">
      <div id="micropost-feed-div">
        <h3>Micropost feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
  </div>
<% else %>
	<div class="center hero-unit">
	  <h1>Welcome to the Sample App</h1>

	  <h2>
	    This is the home page for the
	    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
	    sample application.
	  </h2>

	  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>